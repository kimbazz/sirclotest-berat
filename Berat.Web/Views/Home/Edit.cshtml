@{
    ViewData["Title"] = "Edit";
    @model Berat;
}
<br />
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Home" asp-action="Edit" method="post">
            <div class="form-group">
                <label>Tanggal</label>
                <input type="text" class="form-control" placeholder="Masukan Tanggal" name="Tanggal" value="@Model.Tanggal.Value.ToString("yyyy-MM-dd")">
            </div>
            <div class="form-group">
                <label>Berat Max</label>
                <input type="text" class="form-control" placeholder="Masukan Berat Max" name="BeratMax" value="@Model.BeratMax">
            </div>
            <div class="form-group">
                <label>Berat Min</label>
                <input type="text" class="form-control" placeholder="Masukan Berat Min" name="BeratMin" value="@Model.BeratMin">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
